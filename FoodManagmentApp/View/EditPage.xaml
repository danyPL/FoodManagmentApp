<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodManagmentApp.View.EditPage"
             Title="EditPage">
    <ScrollView>
        
    <VerticalStackLayout>
        <Label Text="Edycja potrawy" FontSize="Large"/>
        <Image Source="{Binding ImageUrl}" WidthRequest="100" HeightRequest="100"/>
        <Entry Text="{Binding Name}"/>
        <Entry Text="{Binding Description}"/>
        <Entry Text="{Binding Price}"/>
        <Label Text="SkÅ‚adniki:"/>
        <CollectionView ItemsSource="{Binding Ingredients}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Span="2" Orientation="Vertical" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
            <Entry Placeholder="Nowy skladnik" x:Name="Ing" />
            <Button Text="Dodaj Skladnik" Clicked="Button_Clicked"/>
            <Button Text="Zapisz" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=SaveCmd}" CommandParameter="{Binding}"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>